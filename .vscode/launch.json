{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "build",
            "runtimeExecutable": "yarn",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "build"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug in Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "url": "http://localhost:9000/"
        }
    ]
}